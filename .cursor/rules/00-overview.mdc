  const { data, mutate } = useSWR("/api/usage/summary", fetcher, {
    refreshInterval: 30000, // 30 seconds
  });

  const updateUsage = useCallback((newUsage: UsageInfo) => {
    setCurrentUsage(newUsage);
  }, []);

  return { usage: data?.plan, updateUsage };
}
