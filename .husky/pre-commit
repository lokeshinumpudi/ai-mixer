#!/bin/sh
set -e

echo "ğŸ” Running pre-commit checks..."

# Type check entire project (since TypeScript cross-file dependencies)
echo "â†’ Type checking..."
pnpm type-check || {
  echo "âŒ Type check failed. Fix type errors before committing."
  exit 1
}

# Get staged files for linting
staged_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$' || true)

# Lint check on staged files (errors only, warnings allowed)
echo "â†’ Linting staged files..."
if [ -n "$staged_files" ]; then
  echo "$staged_files" | xargs pnpm exec next lint --file || {
    echo "âŒ Lint check failed. Fix linting errors before committing."
    exit 1
  }
fi

echo "âœ… All pre-commit checks passed!"
echo "ğŸ’¡ Tip: Run 'pnpm format' before committing to ensure consistent formatting."