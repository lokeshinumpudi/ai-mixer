#!/bin/sh
set -e

echo "🔍 Running pre-commit checks..."

# Get all staged files for processing
staged_files=$(git diff --cached --name-only --diff-filter=ACM || true)
staged_code_files=$(echo "$staged_files" | grep -E '\.(ts|tsx|js|jsx|json|md|css)$' || true)

# Auto-format staged files
echo "→ Formatting staged files..."
if [ -n "$staged_code_files" ]; then
  echo "$staged_code_files" | xargs pnpm format || {
    echo "❌ Formatting failed. Please check file syntax."
    exit 1
  }
  
  # Re-stage formatted files
  echo "$staged_code_files" | xargs git add
  echo "✅ Code formatted and re-staged"
fi

# Type check entire project (since TypeScript cross-file dependencies)
echo "→ Type checking..."
pnpm type-check || {
  echo "❌ Type check failed. Fix type errors before committing."
  exit 1
}

# Get staged TypeScript/JavaScript files for linting
staged_ts_files=$(echo "$staged_files" | grep -E '\.(ts|tsx|js|jsx)$' || true)

# Lint check on staged files (errors only, warnings allowed)
echo "→ Linting staged files..."
if [ -n "$staged_ts_files" ]; then
  echo "$staged_ts_files" | xargs pnpm exec next lint --file || {
    echo "❌ Lint check failed. Fix linting errors before committing."
    exit 1
  }
fi

echo "✅ All pre-commit checks passed!"
echo "🎨 Files have been automatically formatted and committed."